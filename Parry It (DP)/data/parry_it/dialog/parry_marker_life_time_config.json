{
  "type": "minecraft:confirmation",
  "title": "Parry Marker Configuration",
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "glass"
    }
  },
  "inputs": [
    {
      "type": "minecraft:number_range",
      "key": "parry_marker_lifetime",
      "label": "Parry window",
      "start": 1,
      "end": 100,
      "step": 1,
      "initial": 7
    }
  ],
  "can_close_with_escape": true,
  "pause": true,
  "after_action": "close",
  "yes": {
    "label": "Apply Changes",
    "action": {
      "type": "minecraft:dynamic/run_command",
      "template": "scoreboard players set #parry_marker_lifetime .parry_shield_consts $(parry_marker_lifetime)"
    }
  },
  "no": {
    "label": "Discard Changes",
    "action": {
      "type": "minecraft:show_dialog",
      "dialog": "parry_it:dialog_list"
    }
  }
}
