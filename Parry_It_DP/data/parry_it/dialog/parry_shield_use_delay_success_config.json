{
  "type": "minecraft:confirmation",
  "title": "Parry Cooldown on Success Configuration",
  "body": {
    "type": "minecraft:item",
    "item": {
      "id": "minecraft:emerald_block"
    }
  },
  "inputs": [
    {
      "type": "minecraft:number_range",
      "key": "parry_shield_use_delay_success",
      "label": "Cooldown after success",
      "start": -1,
      "end": 1000,
      "step": 1,
      "initial": 2
    }
  ],
  "can_close_with_escape": true,
  "pause": true,
  "after_action": "close",
  "yes": {
    "label": "Apply Changes",
    "action": {
      "type": "minecraft:dynamic/run_command",
      "template": "scoreboard players set #use_cooldown_success .parry_it_values $(parry_shield_use_delay_success)"
    }
  },
  "no": {
    "label": "Discard Changes",
    "action": {
      "type": "minecraft:show_dialog",
      "dialog": "parry_it:dialog_list"
    }
  }
}
